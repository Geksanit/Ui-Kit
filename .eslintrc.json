{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "airbnb-base",
  "rules": {
    "semi": 2, //;
    "no-extra-semi": 2,
    "no-unused-vars": 2,
    "no-redeclare": 2,
    "no-mixed-operators": 2,
    "linebreak-style": 0,
    "no-param-reassign": 1,
    "prefer-template": 1,
    "default-case": 1
  }
}