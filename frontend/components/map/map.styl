map($font, $orange, $gray, $white, $path)

  .map
    width 100%
    border-radius 0.2rem
    font-family $font, Arial, sans-serif
    font-weight 400

    &__element
      height 12.67rem
      width 100%
      background-color $gray[2]
      border-top-left-radius 0.2rem
      border-top-right-radius 0.2rem

    &__down
      width 100%
      height 4.375rem
      background-color $orange[0]
      padding 1.25rem
      color $white
      box-sizing border-box
      border-radius 0 0 0.2rem 0.2rem

    &__message
      font-family $font, Arial, sans-serif
      font-weight 300
      font-size 1.875rem
      width 30%
      height 100%
      line-height 100%
      margin 0 1.25rem 0 0
      float left
      overflow hidden
      text-overflow: ellipsis

    &__address
      font-family $font, Arial, sans-serif
      font-weight 900
      font-size 0.75rem
      float left
      height 1.875rem
      width calc(70% - 5rem)
      overflow hidden
      line-height @height
      vertical-align middle

    &__icon-location
      float right
      height 100%
      width 1.875rem
      background url($path + 'icon4.png') no-repeat center

    &__icon-marker
      float right
      height 100%
      width 1.875rem
      background url($path + 'icon5.png') no-repeat center
