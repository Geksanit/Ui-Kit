map($font, $orange, $gray, $white)

  .map
    $path = '../'
    width 594px
    border-radius 3px
    font-family $font, Arial, sans-serif
    font-weight 400

    &__element
      height 203px
      width 100%
      background-color $gray[2]
      border-top-left-radius 3px
      border-top-right-radius 3px

    &__down
      width 100%
      height 70px
      background-color $orange[0]
      padding 20px
      color $white
      box-sizing border-box
      border-radius 0 0 3px 3px

    &__message
      font-family $font, Arial, sans-serif
      font-weight 300
      font-size 30px
      width 30%
      height 100%
      line-height 100%
      margin 0 20px 0 0
      float left
      overflow hidden
      text-overflow: ellipsis

    &__addres
      font-family $font, Arial, sans-serif
      font-weight 900
      font-size 12px
      float left
      height 30px
      width calc(70% - 80px)
      overflow hidden
      line-height @height
      vertical-align middle

    &__icon1
      float right
      height 100%
      width 30px
      background url($path+'./img/icon4.png') no-repeat center

    &__icon2
      float right
      height 100%
      width 30px
      background url($path+'./img/icon5.png') no-repeat center
