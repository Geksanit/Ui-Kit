mixin map(options)
    - // (lat,lng,title)
    if (!options || (typeof(options) !== 'object'))
        - options = {}
    if !options.title
        - options.title = 'Title'
    if !options.lat
        - options.lat = -30
    if !options.lng
        - options.lng = 150
    .map
        .map__element(data-lat=options.lat, data-lng=options.lng)
        .map__down
            .map__message #{options.title}
            .map__addres loading..
            .map__icon1
            .map__icon2