search(font,$blue,$orange)
  form.search
    position relative
    width 300px
    padding 0px
    border none
    input[type="search"]
      width calc(100% - 2rem)
      margin-right 2rem
      background-color lightgrey
      outline none
      border-radius 5px 0 0 5px
      border none
      padding 0 1rem
      height 2rem
      font-size 1rem
      color gray
      font-family font
    input[type=submit]
      position: absolute;
      top: 0;
      right: 0;
      background-color $blue[0]
      border-radius 0 5px 5px 0
      background-image url(./img/lupa.png)
      background-repeat no-repeat
      background-position center
    input.search-notfound
      color white
      background-color $orange[0]