mixin checkbox(options)
    - options = options || {}
    - options.name = options.name || 'radio'
    - options.value = options.value || 'value'
    - options.mix = options.mix || ''

    if options.checked
        input(checked type = "checkbox" class = "checkbox " + options.mix name = options.name value = options.value)
    else
        input(type = "checkbox" class = "checkbox " + options.mix name = options.name value = options.value)
