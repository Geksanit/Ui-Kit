checkbox($font, $blue, $gray, $white)

  .checkbox
    -webkit-appearance none
    -moz-appearance none
    box-sizing border-box
    height 1.5rem
    padding 0.125rem
    width 3.75rem
    border none
    outline none
    cursor pointer
    position relative
    -webkit-transition: .15s;
    border-radius  0.75rem
    background-color $gray[1]

    &::after
      content ''
      position absolute
      width 1.25rem
      height 1.25rem
      border-radius 0.625rem
      top 0.125rem
      left 0.125rem
      background-color $white
      transition: all 0.5s

    &::before
      position absolute
      top 0
      left 0.625rem
      width 100%
      height 100%
      line-height 1.5rem
      font-family $font, Arial, sans-serif
      font-weight 900
      font-size 0.7rem
      text-align center
      text-transform uppercase
      color $white
      content 'off'
      transition: all 0.5s
      padding 0
      margin 0

    &:checked
      background-color $blue[0]

    &:checked::after
      left 2.375rem

    &:checked::before
      content 'on'
      left -0.625rem
      