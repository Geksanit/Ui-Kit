input-text(font1,font2,$blue,$orange)
    .input-text
        width 100%
        display flex
        margin-bottom 12px
        p
            margin auto 10px
        input[type=text]
            float left
            width 208px
            margin-right 8px
        input[type=text]+div
            position relative
            float right
            width 72px
            margin 0px
            height 28px
            background-color gray
            border-radius 5px
            &::before
                content ''
                top 9px
                left -3px
                position absolute
                width 10px
                height 10px
                background-color inherit
                transform rotate(-45deg)
            &::after
                position absolute
                content 'test'
                width 70px
                height 28px
                font-family font2
                font-size 0.7rem
                text-transform uppercase
                color white
                text-align center
                line-height @height
        input:invalid + div
            background-color $orange[0]
            &::after
                content 'error'
        input:valid + div
            background-color $blue[0]
            &::after
                content 'thanks!'

        input[type=text],input[type=email],input[type=search],input[type=submit],textarea
            padding 4px 1rem
            height 28px
            line-height @height
            display block
            background-color lightgrey
            border-radius 3px
            box-sizing border-box
            border none
            outline none
            font-family font1
            font-size 14px
            color gray
