radio($blue,$orange)
    input[type="radio"]
        position relative
        -webkit-appearance none
        -moz-appearance none
        background-color lightgrey
        $size = 24px
        width $size
        height $size
        border-radius 12px
        border none
        outline none
        padding 0px

        &:checked
            background-color $blue[0]

        &::before
            content ''
            position absolute
            top 8px
            left 7px
            width 8px
            height 4px
            border-bottom 2px solid grey
            border-left 2px solid grey
            transform rotate(-45deg)

        &:checked::before
            border-color white
