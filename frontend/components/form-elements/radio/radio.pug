mixin radio(options)
    - options = options || {}
    - options.name = options.name || 'radio'
    - options.value = options.value || 'value'

    if options.checked
        input(checked type = "radio" class = "radio" name = options.name value = options.value)
    else
        input(type = "radio" class = "radio" name = options.name value = options.value)
