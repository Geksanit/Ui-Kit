textarea($font)
  .textarea
    -webkit-appearance none
    -moz-appearance none
    display block
    box-sizing border-box
    width 100%
    height 88px
    padding 4px 1rem
    margin-bottom 10px
    background-color lightgrey
    border-radius 3px
    border none
    outline none
    resize none
    overflow hidden
    font-family $font, Arial, sans-serif
    font-size 14px
    color gray
    line-height 28px
