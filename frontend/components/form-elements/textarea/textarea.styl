textarea($font, $gray)

  .textarea
    -webkit-appearance none
    -moz-appearance none
    display block
    box-sizing border-box
    width 100%
    height 5.5rem
    padding 0.5rem 0.8rem
    background-color $gray[1]
    border-radius 0.2rem
    border none
    outline none
    resize none
    overflow hidden
    font-family $font, Arial, sans-serif
    font-size 0.875rem
    color $gray[2]
