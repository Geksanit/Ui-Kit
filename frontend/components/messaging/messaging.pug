mixin messaging(options)
    - options = options || {}
    if (options.color !== 'blue' && options.color !== 'orange')
        -options.color = 'blue'
    - options.name = options.name || 'name'
    - options.text = options.text || 'text text text'
    - options.mix = options.mix || ''

    div(class="messaging messaging_color_" + options.color + " " + options.mix)
        .messaging__top
            .messaging__name #{options.name}
            .messaging__img
                .messaging__chat
                +photo({ src: options.src, mix: 'messaging__photo' })
                .messaging__camera
        .messaging__bottom
            .messaging__buble #{options.text}
            textarea.messaging__message(name = "message")
            +standart-button({ title: 'reply', color: options.color, mix: 'messaging__button' })
            .messaging__clearfix