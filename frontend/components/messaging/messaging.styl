messaging($font1, $font2 ,$blue, $orange, $gray, $white, $path)

  .messaging
    width 100%
    border-radius 0.2rem
    font-family $font1, Arial, sans-serif
    font-weight 400

    &__top
      font-family $font2, Arial, sans-serif
      font-weight 300
      color $white
      height 7.25rem
      background-color $blue[1]
      border-top-left-radius 0.2rem
      border-top-right-radius 0.2rem

    &__name
      background-color $blue[0]
      text-align center
      height 5.125rem
      line-height @height
      border-top-left-radius 0.2rem
      border-top-right-radius 0.2rem
      font-size 2.19rem
      margin 0
      width 100%
      overflow hidden
      text-overflow: clip
      word-wrap normal

    &__img
      margin-top -0.75rem
      display flex
      align-items flex-end
      justify-content space-around
      z-index 3

      .photo
        z-index 1

    &__chat
      width 1.25rem
      height 1.38rem
      background url($path + 'Chat.png') no-repeat
      z-index 3
      margin-bottom 0.31rem

    &__camera
      width 1.55rem
      height 1.25rem
      background-image url($path + 'Camera.png')
      z-index 3
      margin-bottom 0.31rem

    &__bottom
      font-family $font1, Arial, sans-serif
      font-weight 700
      font-size 0.625rem
      letter-spacing: 0.0625rem
      background-color $gray[0]
      min-height 3.75rem
      padding 3.87rem 1.38rem 1.625rem
      color $gray[2]
      position relative
      border-bottom-left-radius 0.2rem
      border-bottom-right-radius 0.2rem

    &__buble
      position relative
      background-color $white
      border-radius 0.625rem
      padding 1.25rem
      margin-bottom 1.0625rem

      &::before
        content ''
        position absolute
        width 0.625rem
        height 0.625rem
        background-color inherit
        transform rotate(-45deg)
        top -0.375rem
        left calc(50% - 0.375rem)

    &__message
      padding 1.0625rem
      margin-bottom 1rem
      border-radius 0.625rem
      width 100%
      height 5.5rem
      box-sizing border-box
      background-color $gray[1]
      border 0.2rem solid $gray[1]
      color $gray[2]
      -webkit-appearance none
      resize none
      overflow auto
      outline none

      &:focus
        border 0.2rem solid $white

    &__button-mix
      width 100%
      margin 0

    &__clearfix
      height 0
      clear both

    &_color_orange

      & ^[0]__top
        background-color $orange[1]

      & ^[0]__name
        background-color $orange[0]
