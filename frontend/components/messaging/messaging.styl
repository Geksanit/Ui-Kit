messaging($font1, $font2 ,$blue, $orange, $gray, $white)

  .messaging
    $path = '../'
    width 288px
    border-radius 3px
    font-family $font1, Arial, sans-serif
    font-weight 400

    &__top
      font-family $font2, Arial, sans-serif
      font-weight 300
      color $white
      height 116px
      background-color $blue[1]
      border-top-left-radius 3px
      border-top-right-radius 3px

    &__name
      background-color $blue[0]
      text-align center
      height 82px
      line-height @height
      border-top-left-radius 3px
      border-top-right-radius 3px
      font-size 35px
      margin 0
      width 100%
      overflow hidden
      text-overflow: clip
      word-wrap normal

    &__img
      margin-top -12px
      display flex
      align-items flex-end
      justify-content space-around
      z-index 3

      .photo
        z-index 1

    &__chat
      width 20px
      height 22px
      background url($path + 'img/Chat.png') no-repeat
      z-index 3
      margin-bottom 5px

    &__camera
      width 25px
      height 20px
      background-image url($path + './img/Camera.png')
      z-index 3
      margin-bottom 5px

    &__bottom
      font-family $font1, Arial, sans-serif
      font-weight 700
      font-size 10px
      letter-spacing: 1px
      background-color $gray[0]
      min-height 60px
      padding 62px 22px 26px
      color $gray[2]
      position relative
      border-bottom-left-radius 3px
      border-bottom-right-radius 3px

    &__buble
      position relative
      background-color $white
      border-radius 10px
      padding 20px
      margin-bottom 17px

      &::before
        content ''
        position absolute
        width 10px
        height 10px
        background-color inherit
        transform rotate(-45deg)
        top -6px
        left calc(50% - 6px)

    &__message
      padding 17px
      margin-bottom 15px
      border-radius 10px
      width 100%
      height 88px
      box-sizing border-box
      background-color $gray[1]
      border 3px solid $gray[1]
      color $gray[2]
      -webkit-appearance none
      resize none
      overflow auto
      outline none

      &:focus
        border 3px solid $white

    &__button-mix
      width 100%
      margin 0

    &__clearfix
      height 0
      clear both

    &_color_orange

      .messaging__top
        background-color $orange[1]

      .messaging__name
        background-color $orange[0]
