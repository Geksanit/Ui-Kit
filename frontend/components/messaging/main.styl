messaging(font1,font2,$blue)
  .messaging
    width 300px
    &__top
      font-family font1
      color white
      //font-size 24px
      height 116px
      background-color $blue[1]
    &__name
      background-color $blue[0]
      text-align center
      line-height 80px
      height 80px
    &__img
      margin-top -10px
      display flex
      align-items flex-end
      justify-content space-around
      z-index 3
    &__photo
      width 94px
      height 94px
      border-radius 47px
      box-sizing border-box
      border 5px solid #e5e5e5
      background url(./img/photo1.png) no-repeat
      z-index 3
    &__chat
      width 20px
      height 22px
      background url(./img/Chat.png) no-repeat
      z-index 3
    &__camera
      width 25px
      height 20px
      background-image url(./img/Camera.png)
      z-index 3

    &__bottom
      font-family font2
      background-color #f2f2f2
      min-height 60px
      padding 60px 20px 25px
      color gray
      position relative
    &__buble
      position relative
      background-color white
      border-radius 10px
      padding 20px
      margin-bottom 20px
      &::before
        content ''
        position absolute
        width 10px
        height 10px
        background-color inherit
        transform rotate(-45deg)
        top -6px
        left calc(50% - 6px)
    &__message
      padding 20px
      margin 0 0 20px 0
      border-radius 10px
      width 100%
      height 80px
      box-sizing border-box
      background-color #e5e5e5
      border none
      color gray
      -webkit-appearance none
      resize none
      overflow auto
      outline none
      &:focus
        border 3px solid white
    .standart-button
      width 100%
      margin 0
