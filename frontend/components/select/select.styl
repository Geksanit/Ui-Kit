select($font, $blue, $gray, $white)

  .select
    $height = 1.75rem
    r = 0.2rem
    w = 2.0625rem
    position relative
    width 100%
    height $height
    padding 0
    border none

    &__select
      width 100%
      height 100%
      -webkit-appearance none
      -moz-appearance none
      background-color $gray[1]
      outline none
      border-radius r
      border none
      padding 0 1rem
      font-size 0.875rem
      color $gray[2]
      font-family $font, Arial, sans-serif
      font-weight 400

    &__arrow
      position absolute
      width w
      height 100%
      background-color $blue[0]
      top 0
      right 0
      pointer-events none
      border-radius 0 r r 0

      &::after
        content ''
        position absolute
        width 25%
        height 25%
        top 25%
        right 35%
        border-bottom 0.125rem solid $white
        border-left 0.125rem solid $white
        transform rotate(-45deg)
