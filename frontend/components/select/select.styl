select($font, $blue, $gray, $white)

  .select
    position relative
    width 288px
    padding 0
    border none

    &__select
      width 100%
      -webkit-appearance none
      -moz-appearance none
      background-color $gray[1]
      outline none
      border-radius 3px
      border none
      padding 0 1rem
      height 28px
      font-size 1rem
      color $gray[2]
      font-family $font, Arial, sans-serif
      font-weight 400

    &__arrow
      position absolute
      width 33px
      height 28px
      background-color $blue[0]
      top 0
      right 0
      pointer-events none
      border-radius 0 5px 5px 0
      &::after
        content ''
        position absolute
        width 25%
        height 25%
        top 7px
        right 11px
        border-bottom 2px solid $white
        border-left 2px solid $white
        transform rotate(-45deg)
