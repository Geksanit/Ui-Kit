select($blue)
  form.select
    position relative
    width 300px
    padding 0px
    border none
    div
      position absolute
      width 2rem
      height 2rem
      background-color $blue[0]
      top 0
      right 0
      z-index 2
      pointer-events none
      border-radius 0 5px 5px 0
      &::after
        content ''
        position absolute
        width 25%
        height 25%
        top 0.6rem
        right 0.7rem
        border-bottom 2px solid white
        border-left 2px solid white
        transform rotate(-45deg)
    select
      width 100%
      -webkit-appearance none
      background-color lightgrey
      outline none
      border-radius 5px
      border none
      padding 0 1rem
      height 2rem
      font-size 1rem
      color gray
      font-family font
