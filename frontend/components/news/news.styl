news($font, $blue, $orange, $gray, $white)

  .news
    $color = $blue
    width 100%
    height 13.25rem
    border-radius 0.2rem
    color $white
    background-color $gray[2]
    background-repeat no-repeat
    background-size contain
    font-family $font, Arial, sans-serif
    font-weight 400
    overflow hidden

    &__img
      width 5.94rem
      height 100%

    &__text
      float right
      width calc(100% - 5.94rem)
      height 100%
      padding 0 1.25rem
      box-sizing border-box
      background-color $blue[0]
      font-size 0.75rem
      border-top-right-radius 0.2rem
      border-bottom-right-radius 0.2rem

    &__title
      margin 0.94rem 0
      font-size 1.56rem
      font-family $font, Arial, sans-serif
      font-weight 300

    &__date
      font-size 0.625rem
      font-family $font, Arial, sans-serif
      font-weight 900
      text-transform uppercase

    &_color_orange
      & ^[0]__text
        background-color $orange[0]
