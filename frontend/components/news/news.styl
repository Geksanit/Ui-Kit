news($font, $blue, $orange, $gray, $white)

  .news
    $color = $blue
    width 288px
    height 212px
    border-radius 3px
    color $white
    background-color $gray[2]
    background-repeat no-repeat
    background-size contain
    font-family $font, Arial, sans-serif
    font-weight 400

    &__img
      width 95px
      height 212px

    &__text
      float right
      width calc(100% - 95px)
      height 100%
      padding 0 20px
      box-sizing border-box
      background-color $blue[0]
      font-size 12px
      border-top-right-radius 3px
      border-bottom-right-radius 3px

    &__title
      margin 15px 0
      font-size 25px
      font-family $font, Arial, sans-serif
      font-weight 300

    &__date
      font-size 10px
      font-family $font, Arial, sans-serif
      font-weight 900
      text-transform uppercase

    &_color_orange
      .news__text
        background-color $orange[0]
