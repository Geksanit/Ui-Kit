mixin calendar
    .calendar.js-calendar
        .calendar__day 0
        .calendar__month month
            .calendar__button-left
            .calendar__button-right
        .calendar__year year
        table(cols = "7").calendar__days-week
            tr
                td MON
                td TUE
                td WED
                td THU
                td FRI
                td SAT
                td SUN
        table.calendar__days(cols = "7")
            tbody
        .calendar__button-today TODAY
