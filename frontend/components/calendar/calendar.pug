mixin calendar
    .calendar
        .calendar__day day
        .calendar__month month
            .calendar__left(onclick="left(event)")
            .calendar__right(onclick="right(event)")
        .calendar__year year
        table(cols="7").calendar__days-week
            tr
                td MON
                td TUE
                td WED
                td THU
                td FRI
                td SAT
                td SUN
        table.calendar__days(cols="7")
            tbody
        .calendar__data(onclick="today(event)") TODAY
