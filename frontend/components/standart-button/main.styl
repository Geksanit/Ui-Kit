standart-button($font,$blue,$orange)
  $_color = $blue//default
  .standart-button
    position relative
    margin 5px
    width 118px
    height 32px
    border-radius 5px
    border-style solid
    border-width 1px
    outline none
    background-color  white

    font-family $font
    font-size 1rem
    &__small
      width 78px
      height 22px
      font-size 0.6rem
    text-transform uppercase
    text-align center
    vertical-align middle

    border-color $_color[0]
    box-shadow 0 4px 0 $_color[1]
    color $_color[0]
    &:hover
      background-color $_color[0]
      color white
      cursor pointer
    &:active
      bottom -4px
      box-shadow none
      border-style solid
      border-width 1px

    &__orange
      $_color = $orange
      border-color $_color[0]
      box-shadow 0 4px 0 $_color[1]
      color $_color[0]
      &:hover
        background-color $_color[0]