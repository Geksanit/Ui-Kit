events(font, $blue, $orange, $gray, $white)

  .events
    $color = $blue
    width 100%
    height 13.25rem
    border-radius 0.2rem
    color $white
    background-color $gray[2]
    background-repeat no-repeat
    background-size contain
    overflow hidden

    &__img
      width 5.94rem
      height 100%

    &__text
      float right
      width calc(100% - 5.94rem)
      height 100%
      padding 0 1.25rem
      box-sizing border-box
      background-color $blue[0]
      font-size 0.75rem
      border-top-right-radius 0.2rem
      border-bottom-right-radius 0.2rem

    &__date
      font-family font, Arial, sans-serif
      font-weight 300
      font-size 1.875rem
      text-align center
      display flex
      align-items flex-end

      &-day
        font-size 4.375rem

      &-month
        margin-bottom 0.625rem

    &__title
      font-size 0.75rem
      font-family font, Arial, sans-serif
      font-weight 900
      text-transform uppercase
      margin-bottom 0

    &__description
      font-family font, Arial, sans-serif
      font-weight 400
      margin-top 0.31rem

    &__button
        display flex
        justify-content space-around

        &-mix
          width 8rem

    &_color_orange
      .events__text
        background-color $orange[0]
