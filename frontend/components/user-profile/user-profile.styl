user-profile($font, $blue, $orange, $gray, $white)

  .user-profile
    $path = '../img/'
    display flex
    align-items center
    width 100%
    height 5.875rem
    font-family $font, Arial, sans-serif
    font-weight 400

    &__photo-mix
      margin-right 0.69rem

    &__block
      position relative
      background-color $gray[1]
      color $white
      height 100%
      padding 0.75rem 0.625rem
      box-sizing border-box
      text-align center
      flex 1 1 1rem
      border-radius 0.625rem

      &::before
        content ''
        position absolute
        width 0.625rem
        height 0.625rem
        background-color inherit
        transform rotate(-45deg)
        top calc(50% - 0.375rem)
        left -0.3125rem

      .user-profile__line
        padding 0.625rem
        box-sizing border-box
        width 100%
        height auto
        display flex
        align-items center
        justify-content space-around
        $size = 1.56rem

        .user-profile__icon1
          width $size
          height $size
          background url($path + 'icon1.png') no-repeat center

        .user-profile__icon2
          width $size
          height $size
          background url($path + 'icon2.png') center no-repeat

        .user-profile__icon3
          width $size
          height $size
          background url($path + 'icon3.png') no-repeat center

    &__name
      font-size 1.125rem

    &__prof
      font-family $font, Arial, sans-serif
      font-weight 900
      font-size 0.69rem
      text-transform uppercase

    &_color_blue
      background-color $blue[0]

    &_color_orange
      background-color $orange[0]
