user-profile($font,$blue,$orange)
  $path = '../img/'
  .user-profile
    display flex
    align-items center
    width 288px
    height 94px
    font-family $font, Arial, sans-serif
    font-weight 400

    &__photo-mix
      margin 0 11px

    &__block
      position relative
      background-color #e5e5e5
      color white
      height 100%
      padding 12px 10px
      box-sizing border-box
      text-align center
      flex 1 1 50px
      border-radius 10px
      &::before
        content ''
        position absolute
        width 10px
        height 10px
        background-color inherit
        transform rotate(-45deg)
        top calc(50% - 6px)
        left -5px

      .user-profile__line
        padding 10px
        box-sizing border-box
        width 100%
        height auto
        display flex
        align-items center
        justify-content space-around

        .user-profile__icon1
          width 25px
          height 25px
          background url($path + 'icon1.png') no-repeat center
        .user-profile__icon2
          width 25px
          height 25px
          background url($path + 'icon2.png') no-repeat center
        .user-profile__icon3
          width 25px
          height 25px
          background url($path + 'icon3.png') no-repeat center

    &__name
      font-size 18px

    &__prof
      font-family $font, Arial, sans-serif
      font-weight 900
      font-size 10px

    &_color_blue
      background-color $blue[0]
    &_color_orange
      background-color $orange[0]
