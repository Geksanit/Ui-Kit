user-profile($font, $blue, $orange, $gray, $white, $path)

  .user-profile
    display flex
    justify-content space-between
    width 100%
    height 5.875rem
    font-family $font, Arial, sans-serif
    font-weight 400

    &__photo
      margin-right 0.69rem

    &__block
      position relative
      background-color $gray[1]
      color $white
      height 100%
      padding 0.75rem 0.625rem
      box-sizing border-box
      text-align center
      flex 1 0 5rem
      border-radius 0.625rem

      &::before
        content ''
        position absolute
        width 0.625rem
        height 0.625rem
        background-color inherit
        transform rotate(-45deg)
        top calc(50% - 0.375rem)
        left -0.3125rem

      ^[0]__name
        font-size 1.125rem

      ^[0]__prof
        font-family $font, Arial, sans-serif
        font-weight 900
        font-size 0.69rem
        text-transform uppercase


      ^[0]__social-bar
        padding 0.625rem
        box-sizing border-box
        width 100%
        height auto
        display flex
        align-items center
        justify-content space-around
        $size = 1.56rem

        ^[0]__icon-fb
          width $size
          height $size
          background url($path + 'icon1.png') no-repeat center

        ^[0]__icon-twitter
          width $size
          height $size
          background url($path + 'icon2.png') center no-repeat

        ^[0]__icon-dribbble
          width $size
          height $size
          background url($path + 'icon3.png') no-repeat center

    &_color_blue
      background-color $blue[0]

    &_color_orange
      background-color $orange[0]
