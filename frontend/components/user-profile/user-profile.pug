mixin user-profile(options)
    - // (name,prof,src,color)
    if (!options || (typeof(options) !== 'object'))
        - options = {}
    - var colors = ['blue', 'orange'];
    if (options.color !== colors[0] && options.color !== colors[1])
        - options.color = colors[0]
    if !options.name
        - options.name = 'name'
    if !options.prof
        - options.prof = 'prof'
    - options.prof = options.prof.toUpperCase()
    .user-profile
        +photo(options.src)
        div(class="user-profile__block user-profile_color-" + options.color)
            .user-profile__name #{options.name}
            .user-profile__prof #{options.prof}
            .user-profile__line
                .icon1
                .icon2
                .icon3
