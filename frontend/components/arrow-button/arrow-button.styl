arrow-button($blue, $orange, $gray, $white)

  .arrow-button
    $radius = 3.125rem
    $w = 0.1875rem
    padding 0
    box-sizing content-box
    width $radius - 2*$w
    height $radius - 2*$w
    border-radius 100%
    border-style solid
    border-width $w
    outline none
    cursor pointer
    background-color  $white
    display flex
    align-items center
    justify-content space-around
    border-color $blue[0]
    color $blue[0]

    &__arrow
      $size = 0.875rem
      width $size
      height $size
      transform translateX(-0.25rem) rotate(-45deg)
      border-bottom $w solid $blue[0]
      border-right $w solid $blue[0]

    &:hover
      background-color $blue[0]

      .arrow-button__arrow
        border-color $white

    &_color_orange
      $_color = $orange
      border-color $_color[0]

      .arrow-button__arrow
        border-color $_color[0]

      &:hover
        background-color $_color[0]

    &_orientation_left
      .arrow-button__arrow
        transform translateX(0.25rem) rotate(135deg)

    &:disabled
      border-color $gray[1]
      background-color $gray[1]

      .arrow-button__arrow
        border-color $white
