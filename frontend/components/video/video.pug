mixin video(options)
    - options = options || {}
    - var src = 'no src!'
    if (options.src)
        - var url = require('../../video/' + options.src + '.jpg')
        - src = require('../../video/' + options.src + '.mp4')
    - options.title = options.title || 'Title'

    .js-video.video
        .video__text
            .video__title #{options.title}
            .video__src #{src}
        if(options.src)
            video.video__video(poster = url src = src)
        else
            video.video__video
        .video__controls
            .video__button
            .video__slider
                +slider({ min: 0, max: 100, value: 0, color: 'orange', mix: 'video__slider-mix', line: true })
            .video__button-full
