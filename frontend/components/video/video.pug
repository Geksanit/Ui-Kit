mixin video(options)
    if !options
        - options = {}
    if(!options.src)
        -options.src = 'src-default'
    - var url = require('../video/'+options.src+'.jpg')
    - var src = require('../video/'+options.src+'.mp4')
    if(!options.title)
        -options.title = 'Title'
    .video__frame
        .js-video.video
            .video__title
                h1 #{options.title}
                h4 #{src}
            video(poster = url src = src)
            .video__controls
                .video__button.video__button-play
                .video__slider
                    .video__slider_line-full
                    .video__slider_line
                    input(class="js-video__slider-input video__slider-input" type="range" min="0" max="100" value="0")
                .video__button-full