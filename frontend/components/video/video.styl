video($font, $orange, $gray, $white, $black, $path)

  .video
    $height = 3rem
    position relative
    width 100%
    height 21rem
    min-width 200px
    min-height 100px
    background-color $black
    border-radius 0.2rem
    font-family $font, Arial, sans-serif
    font-weight 400
    color $white

    &_full
      position fixed
      top 10vh
      left 10vw
      width 80vw
      height 80vh
      z-index 10

      &::before
        content ''
        width 100vw
        height 100vh
        position fixed
        top 0
        left 0
        background-color rgba(0,0,0, 0.5)
        z-index -1

    &__text
      padding 1.6rem 2.5rem
      box-sizing border-box
      position absolute
      top 0
      left 0
      width 100%

      &_hide
        display none

    &__title
      font-size 2.2rem
      margin-bottom 2.2rem
      font-family $font, Arial, sans-serif
      font-weight 300

    &__src
      font-size 1.1rem

    &__video
      width 100%
      height 100%

    &__controls
      display flex
      position absolute
      bottom 0
      left 0
      width 100%
      height $height
      background-color rgba(0,0,0,0.5)
      border-bottom-right-radius 0.2rem
      border-bottom-left-radius 0.2rem
      overflow hidden

    &__button
      flex 0 0 $height
      height $height
      background-color transparent
      background url($path + 'play.svg') center no-repeat

      &:hover
        background-color rgba(255,255,255,0.1)

      &_play
        background url($path + 'pause.svg') center  no-repeat

    &__slider-mix
      margin -1.2rem 1.25rem 0 1.25rem

    &__button-full
      flex 0 0 $height
      height $height
      background $orange[0] url($path + 'fullScreen.svg') no-repeat center
      border-bottom-right-radius 0.2rem

      &:hover
        background-size 2.75rem
