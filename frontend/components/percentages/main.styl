percentages(font,$blue,$orange)
  @keyframes start{
    from {stroke-dashoffset: 300}
    to {stroke-dashoffset: 0}
  }
  .percentages
    $color = $orange
    $size = 100px
    width $size
    height $size
    background-color white

    font-family font
    font-size 45px
    color gray
    display flex
    align-items center
    justify-content space-around
    position relative
    &__svg
      transform  rotate(-90deg)
    &__circle
      cx 50%
      cy 50%
      fill white
      stroke $color[0]
      stroke-width 5
      //animation-name: start;
      //animation-duration: 3s;
    &__text
      position absolute
      top 0
      left 0
      width $size
      height $size

      display flex
      align-items center
      justify-content space-around
    &__number
      display block
  .pie-chart
    $color = $orange
    $size = 100px
    width $size
    height $size
    background-color white
    display flex
    align-items center
    justify-content space-around
    position relative
    &__svg
      transform  rotate(-90deg)
    &__circle
      cx 50%
      cy 50%
      fill none
      stroke-width 17
      &-orange
        stroke $orange[0]
      &-blue
        stroke $blue[0]
      &-gray
        stroke #747474
  .pie-chart+div
    padding-left 15px
    p
      position relative
    p:before
      content ''
      width 10px
      height 10px
      position absolute
      top 5px
      left -15px
      background-color #747474
    p:nth-child(2):before
      background-color $orange[0]
    p:nth-child(3):before
      background-color $blue[0]
    p:nth-child(4):before
      background-color lightgray


