pie-chart($blue, $orange, $gray, $white)

  .pie-chart
    $color = $orange
    $size = 100px
    width $size
    height $size
    background-color $white
    display flex
    align-items center
    justify-content space-around
    position relative

    &__svg
      transform  rotate(-90deg)

    &__circle
      fill none
      stroke-width 17

    &_color_lightgray
      stroke $gray[1]

    &_color_orange
      stroke $orange[0]

    &_color_blue
      stroke $blue[0]

    &_color_gray
      stroke $gray[4]

  .pie-chart + div //переделаю
    padding-left 15px
    p
      position relative
    p:before
      content ''
      width 10px
      height 10px
      position absolute
      top 5px
      left -15px
      background-color $gray[4]
    p:nth-child(2):before
      background-color $orange[0]
    p:nth-child(3):before
      background-color $blue[0]
    p:nth-child(4):before
      background-color $gray[1]
