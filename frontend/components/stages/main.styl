stages($font,$blue,$orange)
  .stages
    $diameter = 30px
    $radius = 15px
    border 2px green

    display flex
    align-items center
    justify-content space-around
    &__circle
      width $diameter
      height $diameter
      border-radius $radius
      background-color lightgrey
      color gray
      z-index 2
      font-family $font
      font-weight bold

      display flex
      align-items center
      justify-content space-around
    &__line
      margin -5px
      width 100px
      height 5px
      background-color lightgrey
    &_orange
      background-color $orange[0]
      color white
    &_blue
      background-color $blue[0]
      color white

