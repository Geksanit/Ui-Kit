@import "../../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]
  main
    min-height calc(100vh - 50px)
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content space-around
    margin 0 auto
    width 696px
    @media (max-width:712px)
      margin 0
      width 100%
    @media (min-width:1000px)
      margin auto
      width 696px
    padding 20px
    box-sizing border-box
    background-color white

    &:before
      content attr(date-title)
      color $gray[1]
      margin 0 10%
      width 80%
      height 25px
      line-height @height
      text-align center
      font-size 20px

    .form-registration
      width 288px
      padding 10px
      .container
        width 100%
        display flex
        flex-wrap wrap
        align-items flex-start
        justify-content flex-start
        margin-bottom 12px
        label
          width auto
      label
        width 100%
        display flex
        margin-bottom 12px
        p
          margin auto 10px

      .slider-mix
        width 100%
      .button-mix
        float right

  footer
    width 100%
    height 100px
    background-color gray
