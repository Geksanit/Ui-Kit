@import "../../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]
  min-height 100vh
  display flex
  flex-direction column

  main
    flex 1
    display flex
    flex-direction column
    align-items center
    justify-content flex-start
    box-sizing border-box
    margin 0 auto
    width 696px

    @media only screen and (max-width:712px)
      margin 0
      width 100%

    @media (min-width:1000px)
      margin auto
      width 696px

    padding 20px
    background-color white

    &:before
      content attr(date-title)
      color $gray[1]
      margin-bottom 1.2rem
      width 100%
      height 1.5rem
      line-height @height
      text-align center
      font-size 1.2rem

    .search
      margin-bottom 1.2rem

    .user-profile-container
      width 100%
      display flex
      flex-wrap wrap
      align-items flex-start
      justify-content space-between
      border-top 1px solid lightgray
      padding-bottom 1.5rem
      padding-top 0.5rem

      &__profile
        width 100%
        margin-bottom 1rem

      &__button
        margin-left auto

  footer
    width 100%
    height 1.2rem
    padding 0.6rem 0
    background-color $orange[0]
