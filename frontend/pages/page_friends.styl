@import "../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[1]
  main
    min-height calc(100vh - 50px)
    display flex
    flex-direction column
    align-items center
    justify-content flex-start
    margin 0 10%
    padding 20px
    width 80%
    box-sizing border-box
    background-color white

    .container
      width 100%
      display flex
      flex-wrap wrap
      align-items flex-start
      justify-content space-between
      border-top 1px solid lightgray
      margin-bottom 20px
      padding-top 20px

    &:before
      content attr(date-title)
      color $gray[1]
      margin-bottom 20px
      width 100%
      height 25px
      line-height @height
      text-align center
      font-size 20px
      font-family lato-bold
  @media (max-width:500px)
    main
      margin 0
      width 100%
  @media (min-width:1000px)
    main
      margin 0 15%
      width 70%
  @media (min-width:700px)
    .messaging
      &__buble
        float left
        width 55%
        &::before
          left calc(100% * 5 / 6 - 6px)
      &__message
        float right
        width 55%
      .standart-button
        float right
        width 55%
  footer
    width 100%
    height 100px
    background-color gray