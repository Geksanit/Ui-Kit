@import "../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]
  main
    min-height calc(100vh - 50px)
    display flex
    flex-direction column
    align-items center
    justify-content flex-start
    margin 0 auto
    width 696px
    padding 20px
    box-sizing border-box
    background-color white

    .search
      margin-bottom 20px
    .container
      width 100%
      display flex
      flex-wrap wrap
      align-items flex-start
      justify-content space-between
      border-top 1px solid lightgray
      margin-bottom 20px
      padding-top 20px

    &:before
      content attr(date-title)
      color $gray[1]
      margin-bottom 20px
      width 100%
      height 25px
      line-height @height
      text-align center
      font-size 20px
      font-family lato-bold
  @media (max-width:696px)
    main
      margin 0
      width 100%
  @media (min-width:1000px)
    main
      margin auto
      width 696px
  footer
    width 100%
    height 20px
    padding 10px 0
    background-color $orange[0]