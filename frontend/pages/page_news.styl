@import "../all_included.styl"

$green = green darkgreen

body
  margin 0
  padding 0
  background-color $gray[1]
  main
    min-height calc(100vh - 50px)
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content space-around
    margin 0 10%
    padding 20px
    width 80%
    box-sizing border-box
    background-color white
    //standart-button(lato-b,$green,$orange)
    >div
      margin 20px
    &:before
      content 'News'
      color $gray[1]
      margin 0 10%
      width 80%
      height 25px
      line-height @height
      text-align center
      font-size 20px
      font-family lato-bold
    .arrows
      width 100%
      display flex
      flex-wrap wrap
      align-items flex-start
      justify-content space-between

  @media (max-width:500px)
    main
      margin 0
      width 100%
  @media (min-width:1000px)
    main
      margin 0 15%
      width 70%
  footer
    width 100%
    height 100px
    background-color gray