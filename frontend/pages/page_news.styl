@import "../all_included.styl"

body
    margin 0
    padding 0
    background-color $gray[0]
    main
        min-height calc(100vh - 50px)
        display flex
        flex-wrap wrap
        align-items flex-start
        justify-content flex-start
        margin 0 auto
        padding 20px
        width 696px
        @media (max-width:712px)
            margin 0
            width 100%
        @media (min-width:1000px)
            margin auto
            width 696px
        box-sizing border-box
        background-color white
        >div
            margin 20px
        .news, .events
            flex 1 0 288px
        &:before
            content attr(date-title)
            color $gray[1]
            margin 0 10%
            width 80%
            height 25px
            line-height @height
            text-align center
            font-size 20px
        .video__frame, .map, .container-center
            width 100%
            margin 20px
        .container-center
            display flex
            justify-content space-around
        .arrows
            width 100%
            display flex
            flex-wrap wrap
            align-items flex-start
            justify-content space-between
        .container-calendar
            $width = 279px
            $height = 509px / 2
            margin 0
            padding 0
            background-color yellow
            input[type=checkbox]
                border-top-right-radius 3px
                border-bottom-right-radius 3px
                width 20px
                height 150px
                margin 0
                padding 0
                border none
                outline none
                -webkit-appearance none
                -moz-appearance none
                background-color $blue[0]
                position fixed
                top calc(50% - 25px)
                left 0
                -webkit-transition: .15s;
                &:after
                    content ''
                    position absolute
                    top 20px
                    left 0px
                    width 10px
                    height 10px
                    border-bottom 2px solid white
                    border-left 2px solid white
                    transform rotate(225deg)
                &:before
                    content 'My calendar'
                    position absolute
                    top 85px
                    left -40px
                    height 20px
                    line-height 20px
                    font-size 16px
                    color white
                    padding 0 3px
                    width 90px
                    background-color transparent
                    transform rotate(-90deg)
                &:checked
                    left $width
                    &:after
                        left 7px
                        transform rotate(45deg)
                &:checked + div
                    left 0
            input[type=checkbox] + div
                position fixed
                top calc(50% - 255px)
                left - $width
                -webkit-transition: .15s;
    footer
        width 100%
        height 20px
        padding 10px 0
        background-color $orange[0]
