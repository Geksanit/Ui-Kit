@import "../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]
  main
    min-height calc(100vh - 50px)
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content space-around
    margin 0 auto
    width 696px
    padding 20px
    box-sizing border-box
    background-color white
    >div
      margin 20px

    &:before
      content attr(date-title)
      color $gray[1]
      margin 0 10%
      width 80%
      height 25px
      line-height @height
      text-align center
      font-size 20px
      font-family lato-bold
    .video__frame, .map
      width 100%
    .arrows
      width 100%
      display flex
      flex-wrap wrap
      align-items flex-start
      justify-content space-between

  @media (max-width:696px)
    main
      margin 0
      width 100%
  @media (min-width:1000px)
    main
      margin auto
      width 696px
  footer
    width 100%
    height 100px
    background-color gray