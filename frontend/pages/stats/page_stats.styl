@import "../../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]
  min-height 100vh
  display flex
  flex-direction column

  main
    flex 1
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content flex-start
    margin 0 auto
    width 696px

    @media (max-width:712px)
      margin 0
      width 100%

    @media (min-width:1000px)
      margin auto
      width 696px

    padding 20px
    box-sizing border-box
    background-color white

    &:before
      content attr(date-title)
      color $gray[1]
      margin-bottom 1.2rem
      width 100%
      height 1.5rem
      line-height @height
      text-align center
      font-size 1.2rem

    .stats-container
      margin 20px
      padding 10px
      box-sizing border-box
      flex 1 0 288px
      display flex
      flex-wrap wrap
      align-items center
      justify-content space-between
      border 1px solid lightgray
      border-radius 3px
      color gray

    .stats-colors

      &__element
        position relative

        &:before
          content ''
          width 10px
          height 10px
          position absolute
          top 5px
          left -15px
          background-color $gray[4]

        &_color_orange:before
          background-color $orange[0]

        &_color_blue:before
          background-color $blue[0]

        &_color_lightgray:before
          background-color $gray[1]

  footer
    width 100%
    height 1.2rem
    padding 0.6rem 0
    background-color $orange[0]
