@import "../../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]

  main
    min-height calc(100vh - 50px)
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content space-around
    margin 0 auto
    width 696px

    @media (max-width:712px)
      margin 0
      width 100%

    @media (min-width:1000px)
      margin auto
      width 696px

    padding 20px
    box-sizing border-box
    background-color white

    &:before
      content attr(date-title)
      color $gray[1]
      margin-bottom 20px
      width 100%
      height 25px
      line-height @height
      text-align center
      font-size 20px

    .messaging-mix
      float right
      width 50%
      margin-bottom 20px
      display none

    .main-container
      width 100%

    .friends-container
      float left
      width 45%

    label
      width 100%
      height 3rem
      font-size 1.6rem
      font-family SourceSansPro, Arial, sans-serif
      color white
      text-align center
      line-height 3rem
      display inline-block
      margin-bottom 0.5rem

      &[for=friend1]
        background-color $orange[0]

      &[for=friend2]
        background-color $blue[0]

    input[type=radio]
      -webkit-appearance none
      -moz-appearance none
      display none

      &:checked + .messaging-mix
        display block


  footer
    width 100%
    height 20px
    padding 10px 0
    background-color $orange[0]
