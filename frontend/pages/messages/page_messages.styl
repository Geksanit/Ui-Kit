@import "../../all_included.styl"

body
  margin 0
  padding 0
  background-color $gray[0]
  min-height 100vh
  display flex
  flex-direction column

  main
    flex 1
    display flex
    flex-wrap wrap
    align-items flex-start
    justify-content space-around
    margin 0 auto
    width 696px

    @media (max-width:712px)
      margin 0
      width 100%

    @media (min-width:1000px)
      margin auto
      width 696px

    padding 20px
    box-sizing border-box
    background-color white

    &:before
      content attr(date-title)
      color $gray[1]
      margin-bottom 1.2rem
      width 100%
      height 1.5rem
      line-height @height
      text-align center
      font-size 1.2rem

    .friends-container
      width 100%

      &__list-friends
        float left
        width 45%

      &__list-item
        width 100%
        height 3rem
        font-size 1.6rem
        font-family SourceSansPro, Arial, sans-serif
        color white
        text-align center
        line-height 3rem
        display inline-block
        margin-bottom 0.5rem
        background-color $blue[0]

        &_color_orange
          background-color $orange[0]

      &__container
        float right
        width 50%

      &__messages
        margin-bottom 20px
        display none

      &__radio
        -webkit-appearance none
        -moz-appearance none
        display none

        &:checked + ^[-2..-2]__messages
          display block


  footer
    width 100%
    height 1.2rem
    padding 0.6rem 0
    background-color $orange[0]
