doctype html
include ../all_included
html
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        title Sign up
    body
        +header()
        main(date-title='Sign up')
            form
                label
                    input(type="email" name="email" placeholder="Your Email" autocomplete="on" required autofocus)
                    div
                label
                    input(type="text" name="name" placeholder="Your first name" required)
                    div
                label
                    input(type="text" name="surname" placeholder="Your last name" required)
                    div
                label Your age
                label
                    +slider(10,100,20)
                div Your gender
                .container
                    label
                        input(type="radio" name="gender" value="male" required)
                        p Male
                    label
                        input(type="radio" name="gender" value="female" required)
                        p Female
                label
                    input(type="checkbox" required)
                    p agree
                +standart-button('sign up')


