//colors
$blue = #4eb7a8 #28a290
$darkblue = #28a290
$orange = #e75735 #bf3e1f
$darkorange = #bf3e1f
//fonts
@font-face
  font-family lato-r
  src:url(./fonts/LatoRegular/LatoRegular.ttf)
@font-face
  font-family lato-b
  src:url(./fonts/Lato-Black.ttf)
@font-face
  font-family lato-bold
  src url(./fonts/LatoBold.ttf)
@font-face
  font-family lato-l
  src:url(./fonts/lato-light.ttf)
@font-face
  font-family sans-r
  src url(./fonts/SourceSansProRegular/SourceSansProRegular.ttf)
@font-face
  font-family sans-l
  src url(./fonts/SourceSansProLight/SourceSansProLight.ttf)

//mixins
body
  background #eee
  margin 0
  padding 10%
//styles

//.standart-button
@import "components/standart-button/main.styl"
standart-button(lato-b,$blue,$orange)

//block-line non mixin
@import "components/block-line/main.styl"

//arrow-button
@import "components/arrow-button/main.styl"
arrow-button($blue, $orange)

//percentages
@import "components/percentages/main.styl"
percentages(lato-l,$blue,$orange)

//forma
@import "components/form-elements/main.styl"
forma(sans-r,lato-b,$blue, $orange)

//news
@import "components/news/main.styl"
news(lato-l,lato-b,lato-r,$blue, $orange)

//stages
@import "components/stages/main.styl"
stages(lato-r,$blue, $orange)

//slider
@import "components/slider/main.styl"
slider(lato-r,$blue)

//searh
@import "components/search/main.styl"
search(sans-r,$blue,$orange)

//select ?drop down?
@import "components/select/main.styl"
select($blue)
//video
@import "components/video/main.styl"
video()
//messaging
@import "components/messaging/main.styl"
messaging(sans-l,lato-r,$blue)